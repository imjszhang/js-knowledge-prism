{
  "id": "js-knowledge-prism",
  "name": "JS Knowledge Prism",
  "description": "金字塔原理知识蒸馏工具 — 从 journal 笔记自动提取 atoms、归组 groups、收敛 synthesis",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseDir": {
        "type": "string",
        "description": "知识库根目录（包含 journal/、pyramid/、outputs/ 的目录）"
      },
      "api": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "baseUrl": { "type": "string" },
          "model": { "type": "string" },
          "apiKey": { "type": "string" }
        }
      },
      "process": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "batchSize": { "type": "number" },
          "temperature": { "type": "number" },
          "maxTokens": { "type": "number" },
          "timeoutMs": { "type": "number" }
        }
      }
    }
  },
  "uiHints": {
    "baseDir": {
      "label": "知识库根目录",
      "help": "包含 .knowledgeprism.json 的目录路径",
      "placeholder": "/path/to/my-knowledge-base"
    },
    "api.baseUrl": {
      "label": "模型 API 地址",
      "help": "OpenAI 兼容的 API 端点",
      "placeholder": "http://localhost:8888/v1"
    },
    "api.model": {
      "label": "模型名称",
      "placeholder": "gpt-4o"
    },
    "api.apiKey": {
      "label": "API Key",
      "sensitive": true
    }
  }
}
